# Copy to .env and fill values. Do NOT commit real secrets.

# OpenAI Configuration (supports both OPENAI_KEY and OPENAI_API_KEY for compatibility)
OPENAI_KEY=
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Authentication
ALLOWED_TOKEN=your-secret-token-here

# Database - Supabase PostgreSQL or Render PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/database

# Queue - Upstash Redis or Redis Cloud
REDIS_URL=redis://default:password@host:6379

# S3 Storage - AWS S3 or Supabase Storage (S3-compatible)
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-east-1
S3_ENDPOINT=  # Optional: for S3-compatible storage like Supabase

# Render API (optional, for worker management)
RENDER_API_KEY=
RENDER_SERVICE_ID=

# Server Configuration
PORT=3000
NODE_ENV=development
