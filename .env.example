# Copy to .env and fill values. Do NOT commit real secrets.

# OpenAI Configuration (both OPENAI_KEY and OPENAI_API_KEY are supported)
OPENAI_KEY=
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Authentication
ALLOWED_TOKEN=your-secret-token-here

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis Queue (Upstash)
REDIS_URL=rediss://default:password@host.upstash.io:6379

# S3 Storage (AWS or compatible)
S3_BUCKET=createlen-artifacts
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=us-east-1

# Render Configuration (optional)
RENDER_API_KEY=
RENDER_SERVICE_ID=

# Server Configuration
PORT=3000
NODE_ENV=development

# Worker Configuration
WORKER_CONCURRENCY=2
